<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.notes') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "notes_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'desc']].to_json
        } do %>
    <thead>
      <tr class="search">
            <th><%= t('attributes.server') %></th>
            <th><%= t('attributes.channel') %></th>
            <th><%= t('attributes.user') %></th>
            <th><%= t('attributes.type') %></th>
            <th class="nosort"><%= t('mirco.action') %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </tfoot>
    <tbody>
      <% @notes.each do |note| %>
        <%= content_tag(:tr, id: dom_id(note), class: dom_class(note)) do %>
                <td><%= note.server %></td>
                <td><%= note.channel %></td>
                <td><%= note.user %></td>
                <td><%= note.type %></td>
                <td class="text-nowrap">
            <%= show_link note %>
            <%= edit_link note %>
            <%= delete_link note %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link Note %>
