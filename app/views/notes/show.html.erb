<div class="card">
  <div class="card-header">
    <h4><%= t('activerecord.models.note') %></h4>
  </div>
  <div class="card-body">
    <table class="table table-bordered table-hover autowidth">
    
      <tr>
        <th class="w-25"><%= t('attributes.server')%>:</th>
        <td><%= @note.server %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.channel')%>:</th>
        <td><%= @note.channel %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.message')%>:</th>
        <td><%= @note.message %></td>
      </tr>

      <tr>
        <th class="w-10 pe-3"><%= t('attributes.valid_until')%>:</th>
        <td><%= @note.valid_until %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.user')%>:</th>
        <td><%= @note.user %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.type')%>:</th>
        <td><%= @note.type %></td>
      </tr>

      <tr>
        <th><%= t('attributes.created_at')%>:</th>
        <td><%= @note.created_at.localtime.to_fs(:local) %></td>
      </tr>
    </table>

    <div role="toolbar">
      <%= back_link %>
      <%= edit_link([@notable, @note]) %>
      <%= delete_button([@notable, @note]) %>
      <%= new_link [@notable, Note] %>
    </div>
  </div>
</div>
