<div class="me-2">
  <%= render ConditionBadgeComponent
             .new(state: Mirco::States::OK,
                  count: Server.active.ok.count,
                  link:  sindex_servers_path(condition: Mirco::States::OK),
                  myframe: 'servers') %>
</div>
