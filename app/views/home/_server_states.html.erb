  <%= render ConditionBadgeComponent
             .new(state: Mirco::States::WARNING,
                  count: Server.active.warning.count,
                  link:  sindex_servers_path(condition: Mirco::States::WARNING),
                  myframe: 'servers') %>
</div>
<div class="me-2">
  <%= render ConditionBadgeComponent
             .new(state: Mirco::States::CRITICAL,
