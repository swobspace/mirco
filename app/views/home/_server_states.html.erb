</div>
<div class="me-2">
  <%= link_to sindex_servers_path(acknowledged: 'true'),
              class: 'btn btn-outline-secondary',
              "data-turbo-frame": 'servers' do %>
    <i class="fa-solid fa-person-digging"></i>
    <span class="badge text-bg-secondary">
      <%= Server.active.acknowledged.count %>
    </span>
  <% end %>
</div>

