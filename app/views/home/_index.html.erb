<%= turbo_frame_tag :queued_messages do %>
  <%= content_tag :table, id: "queuing_table",
        class: "table table-bordered table-responsive-xl" do %>
    <thead>
      <tr class="search">
        <th class="text-start"><%= t('attributes.server') %></th>
        <th class="text-start"><%= t('attributes.channel') %></th>
        <th class="text-end"><%= t('attributes.received') %></th>
        <th class="text-end"><%= t('attributes.sent') %></th>
        <th class="text-end"><%= t('attributes.error') %></th>
        <th class="text-end"><%= t('attributes.filtered') %></th>
        <th class="text-end"><%= t('attributes.queued') %></th>
        <th class="text-center"><%= t('attributes.updated_at') %></th>
        <th class="nosort text-center"><%= t('mirco.action') %></th>
      </tr>
    </thead>
    <tbody>
      <% queued_messages.each do |channel_statistic| %>
        <%= content_tag(:tr, id: dom_id(channel_statistic), class: dom_class(channel_statistic)) do %>
          <td class="text-start"><%= channel_statistic.server %></td>
          <td class="text-start"><%= channel_statistic.channel %></td>
          <td class="text-end"><%= channel_statistic.received %></td>
          <td class="text-end"><%= channel_statistic.sent %></td>
          <td class="text-end"><%= channel_statistic.error %></td>
          <td class="text-end"><%= channel_statistic.filtered %></td>
          <td class="text-end"><%= channel_statistic.queued %></td>
          <%= render TdExpirationComponent.new(
                       tstamp: channel_statistic.updated_at,
                       expiration_time: (2 * Mirco.check_interval).minutes ) %>
          <td class="text-nowrap text-center">
            <%= show_link channel_statistic %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
<% end %>
