<div class="me-2">
  <%= link_to queued_channel_statistics_path(all: 'true'),
              class: 'btn btn-outline-secondary',
              "data-turbo-frame": 'queued' do %>
    All queued messages
    <span class="badge text-bg-secondary">
      <%= ChannelStatistic.active.current.queued.count %>
    </span>
  <% end %>
</div>

<div class="me-2">
  <%= link_to queued_channel_statistics_path(acknowledged: 'true'),
              class: 'btn btn-outline-secondary',
              "data-turbo-frame": 'queued' do %>
    <i class="fa-solid fa-person-digging"></i>
    <span class="badge text-bg-secondary">
      <%= ChannelStatistic.active.current.queued.acknowledged.count %>
    </span>
  <% end %>
</div>

