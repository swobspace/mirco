<div class="card">
  <div class="card-header">
    <h4><%= t('activerecord.models.alert') %></h4>
  </div>
  <div class="card-body">
    <table class="table table-bordered table-hover autowidth">
    
      <tr>
        <th><%= t('attributes.server')%>:</th>
        <td><%= @alert.server %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.channel')%>:</th>
        <td><%= @alert.channel %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.channel_detail')%>:</th>
        <td><%= @alert.channel_statistic %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.type')%>:</th>
        <td><%= @alert.type %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.message')%>:</th>
        <td><%= @alert.message %></td>
      </tr>

      <tr>
        <th><%= t('attributes.timestamp')%>:</th>
        <td><%= @alert.created_at.localtime.to_fs(:local) %></td>
      </tr>
        </table>

    <div role="toolbar">
      <%= back_link %>
    </div>
  </div>
</div>
