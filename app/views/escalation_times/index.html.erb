<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.escalation_times') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "escalation_times_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'asc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.escalation_level') %></th>
            <th><%= t('attributes.start_time') %></th>
            <th><%= t('attributes.end_time') %></th>
            <th><%= t('attributes.weekdays') %></th>
            <th class="nosort"><%= t('mirco.action') %></th>
      </tr>
    </thead>
    <tfoot class="search">
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th class="nosearch"></th>
      </tr>
    </tfoot>
    <tbody>
      <% @escalation_times.each do |escalation_time| %>
        <%= content_tag(:tr, id: dom_id(escalation_time), class: dom_class(escalation_time)) do %>
                <td><%= escalation_time.escalation_level %></td>
                <td><%= escalation_time.start_time %></td>
                <td><%= escalation_time.end_time %></td>
                <td><%= escalation_time.weekdays %></td>
                <td class="text-nowrap">
            <%= show_link escalation_time %>
            <%= edit_link escalation_time %>
            <%= delete_link escalation_time %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link EscalationTime %>
