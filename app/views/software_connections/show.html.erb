<div class="card mb-2">
  <div class="card-header">
    <div class="d-flex w-250 justify-content-between">
      <div>
        <span class="subtitle">
          <%= t('activerecord.models.software_connection') %>: 
          #<%= @software_connection.id %>
        </span>
        <h4 class="title"><%= @software_connection %></h4>
      </div>
      <div role="toolbar" class="pt-3">
        <%= edit_link(@software_connection) %>
        <%= delete_link(@software_connection) %>
      </div>
    </div>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-9">
        <table class="table table-sm table-borderless">
        
          <tr class=border-bottom>
            <th class="w-25 pe-3"><%= t('attributes.location')%>:</th>
            <td><%= @software_connection.location %></td>
          </tr>

          <tr>
            <th class="w-25 pe-3"><%= t('attributes.software')%> (SRC):</th>
            <td><%= @software_connection.source_connector&.sw_name %></td>
          </tr>

          <tr>
            <th class="w-25 pe-3"><%= t('attributes.software_interface')%> (SRC):</th>
            <td>
              <%= @software_connection.source_connector&.if_name %>
            </td>
          </tr>
          <tr>
            <td class="w-25 pe-3 text-muted"><%= t('attributes.hostname')%>:</td>
            <td class="text-muted">
              <%= @software_connection.source_connector&.hostname %>
            </td>
          </tr>
          <tr>
            <td class="w-25 pe-3 text-muted"><%= t('attributes.ipaddress')%>:</td>
            <td class="text-muted">
              <%= @software_connection.source_connector&.ipaddress %>
            </td>
          </tr>
          <tr>
            <th class="w-25 pe-3"><%= t('attributes.source_connector')%>:</th>
            <td><%= @software_connection.source_connector %></td>
          </tr>

          <tr class="border-bottom">
            <th class="w-25 pe-3"><%= t('attributes.source_url')%>:</th>
            <td><%= @software_connection.source_url %></td>
          </tr>

          <tr>
            <th class="w-25 pe-3"><%= t('attributes.software')%> (DST):</th>
            <td><%= @software_connection.destination_connector&.sw_name %></td>
          </tr>

          <tr>
            <th class="w-25 pe-3"><%= t('attributes.software_interface')%> (DST):</th>
            <td>
              <%= @software_connection.destination_connector&.if_name %>
            </td>
          </tr>
          <tr>
            <td class="w-25 pe-3 text-muted"><%= t('attributes.hostname')%>:</td>
            <td class="text-muted">
              <%= @software_connection.destination_connector&.hostname %>
            </td>
          </tr>
          <tr>
            <td class="w-25 pe-3 text-muted"><%= t('attributes.ipaddress')%>:</td>
            <td class="text-muted">
              <%= @software_connection.destination_connector&.ipaddress %>
            </td>
          </tr>

          <tr>
            <th class="w-25 pe-3"><%= t('attributes.destination_connector')%>:</th>
            <td><%= @software_connection.destination_connector %></td>
          </tr>

          <tr class="border-bottom">
            <th class="w-25 pe-3"><%= t('attributes.destination_url')%>:</th>
            <td><%= @software_connection.destination_url %></td>
          </tr>

          <tr>
            <th class="w-25 pe-3"><%= t('attributes.ignore')%>:</th>
            <td><%= @software_connection.ignore %></td>
          </tr>

          <tr>
            <th class="w-25 pe-3"><%= t('attributes.ignore_reason')%>:</th>
            <td><%= @software_connection.ignore_reason %></td>
          </tr>

          <tr>
            <th class="w-25 pe-3"><%= t('attributes.description')%>:</th>
            <td><%= @software_connection.description %></td>
          </tr>
        </table>
      </div>
      <div class="col-3">
        <%= image_tag(software_connection_path(@software_connection, format: :svg)) %>
      </div>
    </div>
  </div>
</div>

<%= back_link %>
<%= new_link SoftwareConnection %>
