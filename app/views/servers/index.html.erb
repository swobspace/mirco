<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.servers') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "servers_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'desc']].to_json
        } do %>
    <thead>
      <tr class="search">
            <th><%= t('attributes.name') %></th>
            <th><%= t('attributes.uid') %></th>
            <th><%= t('attributes.location') %></th>
            <th><%= t('attributes.description') %></th>
            <th><%= t('attributes.api_url') %></th>
            <th><%= t('attributes.api_user') %></th>
            <th><%= t('attributes.api_password') %></th>
            <th><%= t('attributes.api_user_has_full_access') %></th>
            <th><%= t('attributes.properties') %></th>
            <th class="nosort"><%= t('daisy.action') %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </tfoot>
    <tbody>
      <% @servers.each do |server| %>
        <%= content_tag_for(:tr, server) do %>
                <td><%= server.name %></td>
                <td><%= server.uid %></td>
                <td><%= server.location %></td>
                <td><%= server.description %></td>
                <td><%= server.api_url %></td>
                <td><%= server.api_user %></td>
                <td><%= server.api_password%></td>
                <td><%= server.api_user_has_full_access %></td>
                <td><%= server.properties %></td>
                <td class="text-nowrap">
            <%= show_link server %>
            <%= edit_link server %>
            <%= delete_link server %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link Server %>
