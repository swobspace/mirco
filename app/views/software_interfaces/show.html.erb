<div class="container-xxl">
  <div class="card mb-3">
    <div class="card-header">
      <div class="d-flex w-100 justify-content-between">
        <div>
          <span class="subtitle">
            <%= t('activerecord.models.software_interface') %>: 
            #<%= @software_interface.id %>
          </span>
          <h4 class="title"><%= @software_interface %></h4>
        </div>
        <div role="toolbar" class="pt-3">
          <%= edit_link(@software_interface) %>
          <%= delete_link(@software_interface) %>
        </div>
      </div>
    </div>

    <div class="card-body">
      <table class="table table-sm table-borderless">
      
        <tr>
          <th class="w-10 pe-3"><%= t('attributes.location')%>:</th>
          <td><%= link_to @software_interface.location, @software_interface.location %></td>
        </tr>

        <tr>
          <th class="w-10 pe-3"><%= t('attributes.software')%>:</th>
          <td><%= link_to @software_interface.software, @software_interface.software %></td>
        </tr>

        <tr>
          <th class="w-10 pe-3"><%= t('attributes.name')%>:</th>
          <td><%= @software_interface.name %></td>
        </tr>

        <tr>
          <th class="w-10 pe-3"><%= t('attributes.hostname')%>:</th>
          <td><%= @software_interface.hostname %></td>
        </tr>

        <tr>
          <th class="w-10 pe-3"><%= t('attributes.ipaddress')%>:</th>
          <td><%= @software_interface.ipaddress %></td>
        </tr>

        <tr>
          <th class="w-10 pe-3"><%= t('attributes.description')%>:</th>
          <td><%= @software_interface.description %></td>
        </tr>
      </table>
    </div>
  </div>

  <%= back_link %>
  <%= new_link SoftwareInterface %>

  <div class="card my-3">
    <div class="card-header">
      <div class="d-flex w-100 justify-content-between">
        <div>
          <h4><%= t('controller.interface_connectors') %></h4>
        </div>
        <div role="toolbar" class="pt-0">
          <%= new_link([@software_interface, InterfaceConnector]) %>
        </div>
      </div>
    </div>
    <div id="interface_connectors">
      <% @software_interface.interface_connectors.each do |interface_connector| %>
        <%= render 'software_interfaces/interface_connectors/interface_connector', interface_connector: interface_connector %>
      <% end %>
    </div>
  </div>
</div>
