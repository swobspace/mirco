<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.software_interfaces') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "software_interfaces_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'asc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.lid') %></th>
            <th><%= t('attributes.software') %></th>
            <th><%= t('attributes.name') %></th>
            <th><%= t('attributes.hostname') %></th>
            <th><%= t('attributes.ipaddress') %></th>
            <th><%= t('attributes.description') %></th>
            <th class="nosort"><%= t('mirco.action') %></th>
      </tr>
    </thead>
    <tfoot class="search">
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th class="nosearch"></th>
      </tr>
    </tfoot>
    <tbody>
      <% @software_interfaces.each do |software_interface| %>
        <%= content_tag(:tr, id: dom_id(software_interface), class: dom_class(software_interface)) do %>
                <td><%= link_to software_interface.lid, software_interface.location %></td>
                <td><%= link_to software_interface.software&.name, software_interface.software %></td>
                <td><%= link_to software_interface.name, software_interface %></td>
                <td><%= software_interface.hostname %></td>
                <td><%= software_interface.ipaddress %></td>
                <td><%= software_interface.description %></td>
                <td class="text-nowrap">
            <%= show_link software_interface %>
            <%= edit_link software_interface %>
            <%= delete_link software_interface %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link SoftwareInterface %>
