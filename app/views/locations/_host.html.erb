<div id="<%= dom_id host %>">
  <div class="card-body py-2 border-bottom border-bottom-1">
    <div>
      <div>
        <i class="fas fa-desktop"></i>
        <span class="fw-bold"><%= link_to host.name, host_path(host) %></span>
        <span>(<%= host.ipaddress %>)</span> 
      </div> 
    </div>
    <div class="ps-4">
      <% if host.description.blank? %>
        <%= host.software_group %>
      <% else %>
        <%= host.description || host.software_group %>
      <% end %>
    </div>
  </div>
</div>
