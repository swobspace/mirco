<div class="card">
  <div class="card-header">
    <div class="d-flex w-100 justify-content-between">
      <h4 class="title">
        <%= t('activerecord.models.channel') %>
        <%= @server %> &#8227; <%= @channel.name %>
      </h4>
      <div role="toolbar">
        <%= back_link %>
        <%= link_to(raw(%Q[<i class="fas fa-fw fa-chart-bar"></i>]), server_channel_statistic_path(@server,@channel), class: 'btn btn-secondary') %>
        <%= link_to(raw(%Q[<i class="fas fa-fw fa-project-diagram"></i>]), server_channel_path(@server,@channel, format: :svg), class: 'btn btn-secondary') %>

        <%= delete_link([@server, @channel]) %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-bordered table-hover autowidth">

      <tr>
        <th><%= t('attributes.description')%>:</th>
        <td>
          <%= format(@channel.description) %>
        </td>
      </tr>

      <tr>
        <th><%= t('attributes.uid')%>:</th>
        <td><%= @channel.uid %></td>
      </tr>

      <tr>
        <th><%= t('attributes.version')%>:</th>
        <td><%= @channel.version %></td>
      </tr>

      <tr>
        <th><%= t('attributes.revision')%>:</th>
        <td><%= @channel.revision %></td>
      </tr>

      <tr>
        <th><%= t('attributes.exportData')%>:</th>
        <td><%= ( @channel.exportData || "may be missing if version < 3.9") %></td>
      </tr>

      <tr>
        <th><%= t('attributes.sourceConnector')%>:</th>
        <td>
          <%= render ConnectorComponent.new(connector: @channel.sourceConnector) %>
        </td>
      </tr>

      <tr>
        <th><%= t('attributes.destinationConnectors')%>:</th>
        <td>
          <%=
            render ConnectorComponent.with_collection(@channel.destination_connectors)
           %>
       </td>
      </tr>
    </table>

  </div>
</div>
