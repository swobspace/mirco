<div class="card mb-2">
  <div class="card-header">
    <div class="d-flex w-100 justify-content-between">
      <div>
        <span class="subtitle">
          <%= t('activerecord.models.notification_group') %>: 
          #<%= @notification_group.id %>
        </span>
        <h4 class="title"><%= @notification_group %></h4>
      </div>
      <div role="toolbar" class="pt-3">
        <%= edit_link(@notification_group) %>
        <%= delete_link(@notification_group) %>
      </div>
    </div>
  </div>

  <div class="card-body">
    <table class="table table-sm table-borderless">
    
      <tr>
        <th class="w-10 pe-3"><%= t('attributes.name')%>:</th>
        <td><%= @notification_group.name %></td>
      </tr>
    </table>
  </div>
</div>

<%= back_link %>
<%= new_link NotificationGroup %>
