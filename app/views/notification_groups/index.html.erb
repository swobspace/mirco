<%= render 'shared/turbo-cache-control' %>

<h1><%= t('controller.notification_groups') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "notification_groups_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          'datatables-target': 'datatable',
          order: [[0, 'asc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.name') %></th>
            <th class="nosort"><%= t('mirco.action') %></th>
      </tr>
    </thead>
    <tfoot class="search">
      <tr>
            <th></th>
            <th class="nosearch"></th>
      </tr>
    </tfoot>
    <tbody>
      <% @notification_groups.each do |notification_group| %>
        <%= content_tag(:tr, id: dom_id(notification_group), class: dom_class(notification_group)) do %>
                <td><%= notification_group.name %></td>
                <td class="text-nowrap">
            <%= show_link notification_group %>
            <%= edit_link notification_group %>
            <%= delete_link notification_group %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link NotificationGroup %>
