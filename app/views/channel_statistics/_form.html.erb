<div class="container">
  <%= simple_form_for(@channel_statistic,
    html: { class: 'form-horizontal card' }) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>
    <div class="card-body">
      <%= f.association :server
	 %>
      <%= f.input :channel
	 %>
      <%= f.input :server_uid
	 %>
      <%= f.input :channel_uid
	 %>
      <%= f.input :received
	 %>
      <%= f.input :sent
	 %>
      <%= f.input :error
	 %>
      <%= f.input :filtered
	 %>
      <%= f.input :queued
	 %>

      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
