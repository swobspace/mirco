<div id="<%= dom_id software_connection %>">
  <div class="card-body py-2 border-bottom border-bottom-1">
    <div class="row">
      <div class="col">
        <div class="fw-bold">
          <%= link_to software_connection.to_s, software_connection %>
        </div>
        <div class="ps-4">
          <i class="fas fa-arrow-alt-circle-right fa-lg"></i>
          <%= software_connection.source_url %>
        </div>
        <div class="ps-4">
          <i class="far fa-arrow-alt-circle-left fa-lg"></i>
          <%= software_connection.destination_url %>
        </div>
      </div>
      <div class="col-2 text-center">
        <%= image_tag software_connection_path(software_connection, format: :svg),
              height: "80",
              data: { controller: 'imagezoom'}
         %>
      </div>
      <div class="col-2 text-end">
        <%= button_to addremove_text, interface_connector_software_connection_path(interface_connector, software_connection),
              method: :patch,
              params: addremove_params,
              class: btn_class
         %>
      </div>
    </div>
  </div>
</div>

